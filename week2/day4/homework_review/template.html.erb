<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
    google.charts.load('current', {'packages':['corechart']});
google.charts.setOnLoadCallback(drawChart);
function drawChart() {

  var data = google.visualization.arrayToDataTable([
    ['Task', 'Hours per Day'],
    ['Work',     11],
    ['Eat',      2],
    ['Commute',  2],
    ['Watch TV', 2],
    ['Sleep',    7]
  ]);

  var options = {
    title: '<%= robot.name %>\'s Daily Activites'
  };

  var chart = new google.visualization.PieChart(document.getElementById('piechart'));

  chart.draw(data, options);
}
    </script>
  </head>
  <body>
    <h1><%= robot.say_hi %>, I'm <%= robot.name %></h1>
    <p>
      You asked me to bend <%= object_to_bend %>, so, here you go:
    </p>
    <h1><%= robot.bend(object_to_bend) %></h1>

    <h1>Cybermen were here</h1>
    <div id="piechart" style="width: 900px; height: 900px;"></div>
    <ul>
      <% collected_robots.each do |robot| %>
        <li>
          <img src="https://robohash.org/<%= robot.name %>" />
          <%= robot %>
        </li>
      <% end %>
    </ul>
  </body>
</html>
